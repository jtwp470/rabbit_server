{% extends "layout.html.jinja2" %}
{% block body %}

<h1>Problem</h1>

<table class="table">
  <tr><th>#</th><th>Title</th><th>ジャンル</th><th>Point</th></tr>
    {% for problem in problems %}
      {% if problem.problem_id in scores %}
        <tr class="success">
      {% else %}
        <tr>
      {% endif %}
      <td>{{ problem.problem_id }}</td><td><a href={{ url_for('view_problem', id=problem.problem_id) }}>{{ problem.title }}</a></td><td>{{ problem.type }}</td><td>{{ problem.point }}</td></tr>
    {% endfor %}
</table>
{% endblock %}
