{% extends "layout.html.jinja2" %}
{% block body %}

  {% if user %}
    <h1>
      {{ user.name }}
      {% if your_id == user.id %}
        <small><span class="label label-info">You</span></small>
      {% endif %}
    </h1>

    <table class="table table-bordered">
      <tr><th>title</th><th>information</th></tr>
      <tr><td>name</td><td>{{ user.name }}</td></tr>
      <tr><td>score</td><td>{{ user.score }} pts</td></tr>
    </table>

    <h2>Solved Problem</h2>

    <table class="table table-striped">
      <tr><th>#</th><th>title</th><th>score</th><th>solved time</th></tr>
      {% for solve in solved %}
        <tr><th>{{ loop.index }}</th><th><a href="{{ url_for('view_problem', id=solve[1].problem_id) }}">{{ solve[1].title }}</a></th><th>{{ solve[1].point }}</th><th>{{ solve[0].solved_time|datetimeformat }}</th></tr>
    {% endfor %}
    </table>
  {% endif %}
{% endblock %}
