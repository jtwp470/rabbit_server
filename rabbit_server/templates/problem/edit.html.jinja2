{% extends "layout.html.jinja2" %}
{% block body %}
  <h1>Edit Problem</h1>
  <form action="{{ url_for('edit_problem', id=problem.problem_id) }}" method="post">
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="title" value="{{ problem.title }}">
    </div>
    <div class="form-group">
      <label>Point</label>
      <input type="number" class="form-control" name="point" value="{{ problem.point }}" placeholder="[0-9]+" required>
    </div>
    <div class="form-group">
      <label>ジャンル</label>
      <select name="type" class="form-control">
        <option value="web">Web</option>
        <option value="rev">Reverse</option>
        <option value="network">Network</option>
        <option value="pwn">Pwn</option>
        <option value="stego">Stego</option>
        <option value="forensics">Forensics</option>
        <option value="Misc">Misc</option>
      </select>
    </div>
    <div class="form-group">
      <label>Body (HTML format can use)</label>
      <textarea class="form-control" name="body" rows="10">{{ problem.body }}</textarea>
    </div>
    <div class="form-group">
      <label>Hint</label>
      <input type="text" class="form-control" name="hint" value="{{ problem.hint }}">
    </div>
    <div class="form-group">
      <label>FLAG (answer)</label>
      <input type="text" class="form-control" name="flag" value="{{ problem.flag }}" placeholder="USAGI{[a-zA-Z0-9_]+}" required>
    </div>
    <button type="submit" class="btn btn-primary">Renew this problem</button>
  </form>
{% endblock %}
